<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="MyNeightool">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<!-- <class>com.ped.myneightool.model.Adresse</class>
		<class>com.ped.myneightool.model.Connection</class>
		<class>com.ped.myneightool.model.Emprunt</class>
		<class>com.ped.myneightool.model.Message</class>
		<class>com.ped.myneightool.model.Outil</class> -->
		<class>com.ped.myneightool.model.Utilisateur</class>

		<properties>
			<!-- auto detection des class java -->
			<property name="hibernate.archive.autodetection" value="class, hbm" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />

			<!-- Affiche les logs SQL -->
			<property name="hibernate.format_sql" value="true" />
			<property name="use_sql_comments" value="true" />
			<property name="hibernate.show_sql" value="true" />


			<property name="hibernate.dialect" value="${jdbc.dialect}" />

			<!-- Cree les tables si elles existent pas, sinon les met a jour -->
			<property name="hibernate.hbm2ddl.auto" value="update" />

			<property name="hibernate.connection.driver_class" value="${jdbc.driver}" />
			<property name="hibernate.connection.url" value="${jdbc.url}" />
			<property name="hibernate.connection.username" value="${jdbc.user}" />
			<property name="hibernate.connection.password" value="${jdbc.password}" />


			<!-- Configuration pool de connexion C3p0 -->
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="3000" />
		</properties>
	</persistence-unit>
	
</persistence>
